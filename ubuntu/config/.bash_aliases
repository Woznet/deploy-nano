# Aliases 

alias sudo='sudo '

alias ll='ls --size -C --human-readable --group-directories-first --color=always --almost-all -l -F'
#alias ll='ls -alF'



alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias chmodx='chmod -v +x'
alias chown='chown -v'
alias chmod='chmod -v'

alias rm='rm -v'
alias cp='cp -v'
alias mv='mv -v'


