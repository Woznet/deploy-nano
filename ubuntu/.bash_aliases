# Aliases

alias sudo='sudo '
alias ls='ls --color=always --group-directories-first'
alias ll='ls -alF'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias la='ls -A'
alias l='ls -CF'

alias chown='chown --changes'
alias chmod='chmod --changes'
alias rm='rm --verbose'
alias cp='cp --verbose'
alias mv='mv --verbose'


